generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  engineType      = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String           @id @default(cuid())
  email           String           @unique
  emailVerified   DateTime?
  name            String?
  passwordHash    String?
  image           String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  accounts        Account[]
  profile         Profile?
  profileSettings ProfileSettings?
  sessions        Session[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  id             String           @id @default(cuid())
  userId         String           @unique
  slug           String           @unique
  headline       String?
  summary        String?
  image          String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  coverImage     String?
  location       String?
  ctaMessage     String?
  meetingUrl     String?
  profession     String?
  achievements   Achievement[]
  certificates   Certificate[]
  dailyAnalytics DailyAnalytics[]
  experiences    Experience[]
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects       Project[]
  resumes        Resume[]
  socialLinks    SocialLink[]

  @@index([slug])
  @@index([userId])
}

model Resume {
  id           String   @id @default(cuid())
  profileId    String
  title        String   @default("My Resume")
  templateId   String   @default("modern")
  fontFamily   String   @default("Inter, sans-serif")
  fontSize     Int      @default(14)
  lineHeight   Float    @default(1.5)
  margins      Int      @default(15)
  primaryColor String   @default("#000000")
  data         Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  profile      Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
}

model Experience {
  id             String    @id @default(cuid())
  profileId      String
  position       String
  company        String
  logo           String?
  location       String?
  startDate      DateTime
  endDate        DateTime?
  current        Boolean   @default(false)
  employmentType String?
  skills         String[]
  description    String?
  displayOrder   Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  profile        Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
}

model SocialLink {
  id           String   @id @default(cuid())
  profileId    String
  platform     String
  url          String
  title        String?
  icon         String?
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  profile      Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
}

model ProfileSettings {
  id                String   @id @default(cuid())
  userId            String   @unique
  isPublic          Boolean  @default(false)
  showEmail         Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  showExperience    Boolean  @default(true)
  showProjects      Boolean  @default(true)
  showSummary       Boolean  @default(true)
  showTechStack     Boolean  @default(true)
  showAchievements  Boolean  @default(true)
  showCertificates  Boolean  @default(true)
  primaryResumeId   String?
  showContact       Boolean  @default(true)
  showGithubHeatmap Boolean  @default(true)
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Project {
  id           String    @id @default(cuid())
  profileId    String
  title        String
  description  String?
  url          String?
  repoUrl      String?
  demoUrl      String?
  thumbnail    String?
  techStack    String[]
  role         String?
  highlights   String[]
  startDate    DateTime?
  endDate      DateTime?
  isFeatured   Boolean   @default(false)
  displayOrder Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  status       String?   @default("complete")
  isPublic     Boolean   @default(true)
  futurePlans  String?
  impact       String?
  keyFeatures  String[]
  problem      String?
  solution     String?
  profile      Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
}

model Achievement {
  id           String    @id @default(cuid())
  profileId    String
  title        String
  subtitle     String?
  date         DateTime?
  description  String[]
  url          String?
  type         String    @default("award")
  displayOrder Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  profile      Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
}

model Certificate {
  id           String   @id @default(cuid())
  profileId    String
  name         String
  issuer       String
  date         DateTime
  url          String?
  credentialId String?
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  profile      Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
}

model DailyAnalytics {
  id                  String   @id @default(cuid())
  profileId           String
  date                DateTime @db.Date
  views               Int      @default(0)
  uniqueVisitors      String[]
  totalDuration       Int      @default(0)
  geoStats            Json?    @default("{}")
  deviceStats         Json?    @default("{}")
  referrerStats       Json?    @default("{}")
  projectInteractions Json?    @default("{}")
  profile             Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([profileId, date])
  @@index([date])
}
